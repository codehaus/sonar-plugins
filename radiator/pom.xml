  <packaging>sonar-plugin</packaging>
  <version>1.1-SNAPSHOT</version>

  <name>Sonar Radiator plugin</name>
  <description>Display measures in a big treemap.</description>
  <url>http://docs.codehaus.org/display/SONAR/Radiator+Plugin</url>
  <organization>
    <name>SonarSource</name>
    <url>http://www.sonarsource.com</url>
