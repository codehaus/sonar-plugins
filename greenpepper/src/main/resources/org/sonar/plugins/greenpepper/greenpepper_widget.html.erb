<% if measure('greenpepper_tests') %>
  <table width="100%">
    <tr>
      <td valign="top" width="50%" nowrap>
        <div class="dashbox">
          <h3>GreenPepper Tests</h3>

          <p>
            <span class="big">
              <%= format_measure('greenpepper_tests', :default => '0') -%>
              <%= dashboard_configuration.selected_period? ? format_variation('greenpepper_tests') : trend_icon('greenpepper_tests') -%>
            </span>
          </p>
        </div>
      </td>
      <td valign="top" width="50%" nowrap>
        <div class="dashbox">
          <h3>Test success</h3>

          <p>
            <span class="big">
              <%= format_measure('greenpepper_test_success_density', :default => '0') %>
            </span>
          </p>

          <p><span><%= format_measure('greenpepper_test_failures', :suffix => ' failures', :default => '0 failures') %></span></p>

          <p><span><%= format_measure('greenpepper_test_errors', :suffix => ' errors', :default => '0 errors') %></span></p>

          <p><span><%= format_measure('greenpepper_skipped_tests', :suffix => ' skipped', :default => '0 skipped') %></span></p>
        </div>
      </td>
    </tr>
  </table>
<% end %>