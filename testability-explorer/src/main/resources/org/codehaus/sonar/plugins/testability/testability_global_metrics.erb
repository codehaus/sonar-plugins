<%
      if measure('testability_overall_cost')
%>
<div class="dashbox">
    	<h3>Testability Explorer</h3>
    	<p><%= format_measure('testability_overall_cost') -%> <span title="<%= metric('testability_overall_cost').description -%>"><%= metric('testability_overall_cost').short_name -%></span></p>
</div>
<div class="yui-u">
    <%
      def generate_label_name(metric_name)
        label_name = metric(metric_name).short_name
        label_name = label_name + " (" + formatted_value(measure(metric_name)) + ")"
        return label_name
      end
      labels = generate_label_name('testability_excellent') + "|" + generate_label_name('testability_acceptable') + "|" + generate_label_name('testability_needswork')
      data = formatted_value(measure('testability_excellent')) + "," + formatted_value(measure('testability_acceptable')) + "," + formatted_value(measure('testability_needswork'))
    %>
	<%= gchart("chs=290x140&chd=t:#{data}&cht=p&chl=#{labels}&chco=00FF00,FFFF00,FF0000") -%>
</div>
<%
	end
%>