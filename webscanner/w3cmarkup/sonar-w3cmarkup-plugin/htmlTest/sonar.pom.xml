<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.sonarsource</groupId>
    <artifactId>sonarsource</artifactId>
    <version>1.0</version>

    <name>sonarsource</name>
    <packaging>pom</packaging>
    
    <parent>
        <groupId>html</groupId>
        <artifactId>markup-validator-parent</artifactId>
        <version>1.0</version>
    </parent>
    
    <properties>
        <htmlDir>target/spider/www.sonarsource.org</htmlDir>
        <sonar.web.sourceDirectory>${htmlDir}</sonar.web.sourceDirectory>
    </properties>
  
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.sonar-plugins</groupId>
                <artifactId>maven-sonar-web-plugin</artifactId>
                <version>0.2-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                           <!-- <goal>webharvest-crawler</goal> -->
                            <goal>validate-html-toetstool</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <htmlDir>${htmlDir}</htmlDir>
                    <webHarvestConfigFile>${basedir}/webharvest.xml</webHarvestConfigFile>
                    <seedingUrl>http://www.sonarsource.org</seedingUrl>
		    <toetsToolUrl>http://api.toetstool.nl/</toetsToolUrl>
		    <cssDir>${htmlDir}</cssDir>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
