<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>html</groupId>
  <artifactId>markup-validator-parent</artifactId>
  <version>1.0</version>

  <name>markup-validator-parent</name>
  <packaging>pom</packaging>

  <profiles>
    <profile>
      <id>xml</id>
      <properties>
        <sonar.branch>xml</sonar.branch>
        <sonar.language>xml</sonar.language>
        <sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
        <sonar.web.fileExtensions>html</sonar.web.fileExtensions>
      </properties>
    </profile>

    <profile>
      <id>html</id>
      <properties>
        <sonar.branch>html</sonar.branch>
        <sonar.language>html</sonar.language>
        <sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
        <sonar.html.fileExtensions>html,xhtml</sonar.html.fileExtensions>
        <sonar.toetstool.url>http://api.toetstool.nl/</sonar.toetstool.url>
      </properties>
    </profile>

    <!-- Sonar server -->
    <profile>
      <id>sonar-nlsivm114</id>
      <properties>
        <sonar.jdbc.url>jdbc:mysql://nlsivm114.sdmc.ao-srv.com:3306/sonar?useUnicode=true&amp;characterEncoding=utf8</sonar.jdbc.url>
        <sonar.jdbc.driver>com.mysql.jdbc.Driver</sonar.jdbc.driver>
        <sonar.jdbc.username>sonar</sonar.jdbc.username>
        <sonar.jdbc.password>sonar</sonar.jdbc.password>
        <sonar.host.url>http://nlsivm114.sdmc.ao-srv.com:8080</sonar.host.url>
      </properties>
    </profile>

    <!-- Sonar server -->
    <profile>
      <id>postgresql</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <sonar.jdbc.url>jdbc:postgresql://localhost/sonar</sonar.jdbc.url>
        <sonar.jdbc.driver>org.postgresql.Driver</sonar.jdbc.driver>
        <sonar.jdbc.username>sonar</sonar.jdbc.username>
        <sonar.jdbc.password>sonar</sonar.jdbc.password>
        <sonar.host.url>http://localhost:9000</sonar.host.url>
      </properties>
    </profile>
  </profiles>

  <build>

    <!-- default configuration for maven-webscanner-plugin -->
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.sonar-plugins</groupId>
          <artifactId>maven-webscanner-plugin</artifactId>
          <version>0.1-SNAPSHOT</version>
          <configuration>
            <seedingUrl>${webscanner.seedingUrl}</seedingUrl>
            <downloadDirectory>target/spider</downloadDirectory>
          </configuration>
          <executions>
            <execution>
              <phase>verify</phase>
              <goals>
                <goal>web-crawler</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <!-- plugin repository for maven-sonar-web-plugin -->
  <pluginRepositories>
    <pluginRepository>
      <id>codehaus snapshots</id>
      <name>codehaus snapshots</name>
      <url>http://snapshots.repository.codehaus.org</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <checksumPolicy>ignore</checksumPolicy>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
