<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sonarsource.it.php</groupId>
  <artifactId>math-php-test</artifactId>
  <name>PHP Mathematics</name>
  <version>1.0</version>
  <!-- For the moment, specify pom as packaging for php projects -->
  <packaging>pom</packaging>
  <build>
    <!-- You cannot omit this one, because maven will implicitely add src/main/java 
      to it -->
    <sourceDirectory>${basedir}/source/src</sourceDirectory>
    <!--testSourceDirectory>${basedir}/source/tests</testSourceDirectory -->
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>source/src</source>
                <!--<source>source/tests</source> -->
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.phpmaven</groupId>
        <artifactId>maven-php-plugin</artifactId>
        <extensions>true</extensions>
        <version>1.1</version>
        <configuration>
          <sourceDirectory>/source/src</sourceDirectory>
          <testDirectory>/source/tests</testDirectory>
          <testFile>AllTests.php</testFile>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies><!-- phpUnit for PHP 5 -->
    <dependency>
      <groupId>org.phpunit</groupId>
      <artifactId>phpunit5</artifactId>
      <version>3.3.9</version>
    </dependency>
  </dependencies>
  <!-- phpUnit for PHP 4 -->
  <!-- <dependency> <groupId>org.phpunit</groupId> <artifactId>phpunit4</artifactId> 
    <version>1.3.2-SNAPSHOT</version> </dependency> -->

  <reporting>
    <plugins>
      <!-- Doxygen Documentation -->
      <plugin>
        <groupId>org.phpmaven</groupId>
        <artifactId>maven-php-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

  <!-- some properties that you may want to change -->
  <properties>
    <sonar.language>php</sonar.language>
    <sonar.phpPmd.skip>false</sonar.phpPmd.skip>
    <sonar.phpCodesniffer.skip>false</sonar.phpCodesniffer.skip>
    <sonar.phpDepend.skip>false</sonar.phpDepend.skip>
    <sonar.phpUnit.coverage.skip>false</sonar.phpUnit.coverage.skip>
    <sonar.phpUnit.skip>false</sonar.phpUnit.skip>
    <sonar.phpUnit.mainTestClass>/source/tests/AllTests2.php</sonar.phpUnit.mainTestClass>
    <sonar.phpcpd.skip>false</sonar.phpcpd.skip>
    <sonar.phpcpd.excludes>source/tests</sonar.phpcpd.excludes>

    <!-- to enable mutliple source directories. The phase must patch with 
      the build-helper-maven-plugin exectution phase -->
    <sonar.phase>generate-sources</sonar.phase>
    
  </properties>

  <!-- Info added to check that the PHP plugin works correctly with the SCM plugin -->
  <scm>
    <connection>scm:svn:http://svn.codehaus.org/sonar-plugins/trunk/php/math-php-test</connection>
    <developerConnection>scm:svn:https://svn.codehaus.org/sonar-plugins/trunk/php/math-php-test</developerConnection>
    <url>http://svn.codehaus.org/sonar-plugins/trunk/php/math-php-test</url>
  </scm>

  <pluginRepositories>
    <pluginRepository>
      <id>release-repo1.php-maven.org</id>
      <name>PHP-Maven 2 Release Repository</name>
      <url>http://repo1.php-maven.org/release</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
    <pluginRepository>
      <id>snapshot-repo1.php-maven.org</id>
      <name>PHP-Maven 2 Snapshot Repository</name>
      <url>http://repo1.php-maven.org/snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
  <repositories>
    <repository>
      <id>release-repo1.php-maven.org</id>
      <name>PHP-Maven 2 Release Repository</name>
      <url>http://repo1.php-maven.org/release</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
    <repository>
      <id>snapshot-repo1.php-maven.org</id>
      <name>PHP-Maven 2 Snapshot Repository</name>
      <url>http://repo1.php-maven.org/snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>


</project>
