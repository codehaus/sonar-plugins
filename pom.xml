	<name>Sonar C# Plugin</name>
	<inceptionYear>2010</inceptionYear>
	<url>http://docs.codehaus.org/display/SONAR/XXXXXXX</url>
	<organization>
		<name>Codehaus Sonar Plugins</name>
		<url>http://sonar-plugins.codehaus.org/</url>
