<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/test/resources/conf</directory>
      <outputDirectory>/examples/conf</outputDirectory>
      <fileMode>0644</fileMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/test/resources/users-apacheds.ldif</source>
      <outputDirectory>/examples</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>src/test/resources/users-opends.ldif</source>
      <outputDirectory>/examples</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>src/assembly/sonar.properties</source>
      <outputDirectory>/</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>${build.directory}/${build.finalName}.jar</source>
      <outputDirectory>/</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
  </files>
</assembly>
