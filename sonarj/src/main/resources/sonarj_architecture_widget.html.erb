<%
if measure('sonarj.architecture_violations')
%>
<div class="dashbox">
  <table>
    <tr>
        <td width="190px"><h3>Architecture Violations</h3></td>
        <td><h3>Cyclic Arch. Elements</h3></td>
    </tr>
    <tr>
        <td>
            <span class="big">
              <%= format_measure('sonarj.architecture_violations', :url => '/drilldown/violations/org.codehaus.sonar-plugins:sonar-sonarj-plugin?priority=MAJOR&rule=SonarJ%3Asonarj.architecture') -%> <%= tendency_icon(measure('sonarj.architecture_violations')) %> 
            </span>
        </td>
        <td>
            <span class="big">
              <%= format_measure('sonarj.cyclic_artifacts') -%> <%= tendency_icon(measure('sonarj.cyclic_artifacts')) %> 
            </span>
        </td>
    </tr>
   	<tr>
        <td>
              <%= format_measure('sonarj.violating_types', :suffix => ' violating types') -%> <%= tendency_icon(measure('sonarj.biggest_cycle_group')) %> <%= format_measure('sonarj.violating_types_percent', :prefix => '(', :suffix => ')') -%>
        </td>
        <td>
              <%= format_measure('sonarj.ignored_violations', :suffix => ' ignored/tolerated') -%> <%= tendency_icon(measure('sonarj.ignored_violations')) %>
        </td>
    </tr>
    <tr>
        <td>
              <%= format_measure('sonarj.threshold_warnings', :suffix => ' threshold violations') -%> <%= tendency_icon(measure('sonarj.threshold_warnings')) %>
        </td>
        <td>
              <%= format_measure('sonarj.ignored_warnings', :suffix => ' ignored/tolerated') -%> <%= tendency_icon(measure('sonarj.ignored_warnings')) %>
        </td>
    </tr>
   <tr>
        <td>
              <%= format_measure('sonarj.tasks', :suffix => ' open tasks') -%> <%= tendency_icon(measure('sonarj.tasks')) %>
        </td>
        <td>
              <%= format_measure('sonarj.task_refs', :suffix => ' open tasks (references)') -%> <%= tendency_icon(measure('sonarj.task_refs')) %>
        </td>
    </tr>
  </table>
</div>

<%
end
%>  