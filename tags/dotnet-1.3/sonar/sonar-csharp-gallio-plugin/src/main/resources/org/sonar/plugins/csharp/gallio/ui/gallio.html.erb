<%
  count_asserts=measure('count_asserts')
  assert_per_test=measure('assert_per_test')
  
  if assert_per_test
%>
<table width="100%">
  <tr>
    <td valign="top" width="48%" nowrap>
      <div class="dashbox">
        <h3>Asserts</h3>
        <p>
          <span class="big"><%= format_measure(count_asserts, :suffix => '', :url => url_for_drilldown(count_asserts)) -%></span>
          <%= dashboard_configuration.selected_period? ? format_variation(count_asserts) : trend_icon(count_asserts) -%>
        </p>
      </div>
    </td>
    <td width="10"> </td>
    <td valign="top">
      <div class="dashbox">
        <h3>Assert/Test</h3>
        <p>
          <span class="big"><%= format_measure(assert_per_test, :suffix => '', :url => url_for_drilldown(assert_per_test)) -%></span>
          <%= dashboard_configuration.selected_period? ? format_variation(assert_per_test) : trend_icon(assert_per_test) -%>
        </p>
      </div>
    </td>
  </tr>
</table>

<% end %>
