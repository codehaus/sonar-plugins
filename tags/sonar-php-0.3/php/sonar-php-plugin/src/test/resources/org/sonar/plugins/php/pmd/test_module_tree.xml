<ruleset name="Sonar PHP PMD rules">
  <rule name="CyclomaticComplexity">
    <priority>2</priority>
    <properties>
      <property name="threshold" value="20"/>
    </properties>
  </rule>
  <rule name="ExcessiveClassLength">
    <priority>3</priority>
    <properties>
      <property name="minimum" value="20"/>
    </properties>
  </rule>
  <rule name="UnusedFormalParameter">
    <priority>4</priority>
    <properties/>
  </rule>
</ruleset>