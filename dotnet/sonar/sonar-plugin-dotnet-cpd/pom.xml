<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>sonar-dotnet</artifactId>
    <groupId>org.codehaus.sonar-plugins.dotnet</groupId>
    <version>0.4-SNAPSHOT</version>
  </parent>

  <groupId>org.codehaus.sonar-plugins.dotnet</groupId>
  <artifactId>sonar-plugin-dotnet-cpd</artifactId>
  <packaging>jar</packaging>
  <name>Sonar plugin for dotnet copy/paste detection</name>

  <properties>
    <sonar.plugin.class>org.sonar.plugin.dotnet.cpd.DotnetCpdPlugin</sonar.plugin.class>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar-build-version}</version>
    </dependency>
     <dependency>
      <groupId>org.codehaus.sonar-plugins.dotnet</groupId>
      <artifactId>sonar-plugin-dotnet-core</artifactId>
    </dependency>
    <dependency>
  	  <groupId>pmd</groupId>
  	  <artifactId>pmd</artifactId>
      <version>4.2.5</version>
	</dependency>
	
    <!-- 
    
    IMPORTANT : only dependencies with test scope can be added to plugins. 
    
    -->

    <!-- unit tests -->
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar-build-version}</version>
      <scope>test</scope>
      <type>test-jar</type>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
    
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <!-- complete META-INF/MANIFEST.MF -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Plugin-Class>${sonar.plugin.class}</Plugin-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>

      <plugin>
        <!-- Java 5 -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
