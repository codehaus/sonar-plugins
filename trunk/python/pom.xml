<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion> 
  
  <parent>
    <groupId>org.codehaus.sonar-plugins</groupId>
    <artifactId>parent</artifactId>
    <version>8</version>
    <relativePath>../parent</relativePath>
  </parent>
  
  <artifactId>sonar-python-plugin</artifactId>
  <packaging>sonar-plugin</packaging>
  <version>0.1-SNAPSHOT</version>
  <name>Sonar Python Plugin</name>
  <description>Enable analysis and reporting on python projects.</description>
  <!-- <url>http://docs.codehaus.org/display/SONAR/Python+Plugin</url> -->
  <inceptionYear>2011</inceptionYear>
  
  <organization>
    <name>Waleri Enns</name>
  </organization>

  <licenses>
    <license>
      <name>GNU LGPL 3</name>
      <url>http://www.gnu.org/licenses/lgpl.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  
  <developers>
    <developer>
      <id>wenns</id>
      <name>Waleri Enns</name>
    </developer>
  </developers>

  <properties>
    <sonar.version>2.9</sonar.version>
    <sonar.pluginClass>org.sonar.plugins.python.PythonPlugin</sonar.pluginClass>
    <sonar.pluginKey>python</sonar.pluginKey>
    <sonar.pluginName>Python</sonar.pluginName>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar.version}</version>
    </dependency>
    
    <!-- unit tests -->
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-testing-harness</artifactId>
      <version>${sonar.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
