<?xml version="1.0" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
	DefaultTargets="CheckStyle" ToolsVersion="3.5">
	<PropertyGroup>
		<ProjectRoot>C:\Sonar\Projects\CSharp\Resources\FromCodehaus\ExampleStyleCop
		</ProjectRoot>
		<StyleCopRoot>C:\Program Files\Microsoft StyleCop 4.4.0.14
		</StyleCopRoot>
	</PropertyGroup>
	<UsingTask TaskName="StyleCopTask" AssemblyFile="$(StyleCopRoot)\Microsoft.StyleCop.dll"></UsingTask>
	<ItemGroup>
		<Project
			Include="C:\Sonar\Projects\CSharp\Resources\FromCodehaus\ExampleStyleCop\Example.Application\Example.Application.csproj"></Project>
		<Project
			Include="C:\Sonar\Projects\CSharp\Resources\FromCodehaus\ExampleStyleCop\Example.Core\Example.Core.csproj"></Project>
	</ItemGroup>
	<Target Name="CheckStyle">
		<CreateItem Include="%(Project.RootDir)%(Project.Directory)**\*.cs">
			<Output ItemName="SourceAnalysisFiles" TaskParameter="Include"></Output>
		</CreateItem>
		<StyleCopTask MaxViolationCount="-1"
			OverrideSettingsFile="C:\Sonar\Projects\CSharp\Resources\FromCodehaus\ExampleStyleCop\target\sonar\sonar.StyleCop"
			OutputFile="C:\Sonar\Projects\CSharp\Resources\FromCodehaus\ExampleStyleCop\target\stylecop-report.xml"
			TreatErrorsAsWarnings="true" ForceFullAnalysis="true"
			SourceFiles="@(SourceAnalysisFiles);@(CSFile)"
			ProjectFullPath="C:\Sonar\Projects\CSharp\Resources\FromCodehaus\ExampleStyleCop\Example.sln"></StyleCopTask>
	</Target>
</Project>