<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <description>Maven plugin for PDF reporting</description>
  <groupId>org.codehaus.sonar-plugins</groupId>
  <artifactId>maven-pdfreport-plugin</artifactId>
  <version>1.2-SNAPSHOT</version>
  <goalPrefix>pdfreport</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>generate</goal>
      <description>Generate a PDF report. WARNING, Sonar server must be started.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>true</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>org.sonar.report.pdf.mojo.SonarPDFMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>branch</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Branch to be used.</description>
        </parameter>
        <parameter>
          <name>outputDirectory</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Project build directory</description>
        </parameter>
        <parameter>
          <name>password</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Password to access WS API.</description>
        </parameter>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description>Maven project info.</description>
        </parameter>
        <parameter>
          <name>reportType</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Type of report.</description>
        </parameter>
        <parameter>
          <name>sonarBranch</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Branch to be used.</description>
        </parameter>
        <parameter>
          <name>sonarHostUrl</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Sonar Base URL.</description>
        </parameter>
        <parameter>
          <name>username</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>Username to access WS API.</description>
        </parameter>
      </parameters>
      <configuration>
        <password implementation="java.lang.String">${sonar.pdf.password}</password>
        <sonarHostUrl implementation="java.lang.String">${sonar.host.url}</sonarHostUrl>
        <outputDirectory implementation="java.io.File">${project.build.directory}</outputDirectory>
        <branch implementation="java.lang.String">${branch}</branch>
        <username implementation="java.lang.String">${sonar.pdf.username}</username>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
        <reportType implementation="java.lang.String">${report.type}</reportType>
        <sonarBranch implementation="java.lang.String">${sonar.branch}</sonarBranch>
      </configuration>
    </mojo>
  </mojos>
  <dependencies>
