<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>sns</groupId>
    <artifactId>sns-bank</artifactId>
    <version>1.0</version>

    <name>sns-bank</name>
    <packaging>pom</packaging>

    <properties>
        <htmlDir>target/spider/www.snsbank.nl</htmlDir>
        
        <!-- Sonar analysis -->
        <sonar.language>web</sonar.language>
        <sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
        <sonar.web.fileExtensions>html</sonar.web.fileExtensions>
        <sonar.web.sourceDirectory>${htmlDir}</sonar.web.sourceDirectory>
    </properties>
  
    <profiles>
      
        <!--  Sonar server -->
        <profile>
            <id>sonar-nlsivm114</id>
            <properties>
                <sonar.jdbc.url>jdbc:mysql://nlsivm114.sdmc.ao-srv.com:3306/sonar?useUnicode=true&amp;characterEncoding=utf8</sonar.jdbc.url>
                <sonar.jdbc.driver>com.mysql.jdbc.Driver</sonar.jdbc.driver>
                <sonar.jdbc.username>sonar</sonar.jdbc.username>
                <sonar.jdbc.password>sonar</sonar.jdbc.password>
                <sonar.host.url>http://nlsivm114.sdmc.ao-srv.com:8080</sonar.host.url>
            </properties>
        </profile>
    </profiles>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.sonar-plugins</groupId>
                <artifactId>maven-sonar-web-plugin</artifactId>
                <version>0.2-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>webharvest-crawler</goal>
                            <goal>validate-w3c-markup</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <htmlDir>${htmlDir}</htmlDir>
                    <webHarvestConfigFile>${basedir}/webharvest.xml</webHarvestConfigFile>
                    <seedingUrl>https://www.snsbank.nl/particulier</seedingUrl>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- plugin repository for maven-sonar-web-plugin -->
    <pluginRepositories>
        <pluginRepository>
            <id>codehaus snapshots</id>
            <name>codehaus snapshots</name>
            <url>http://snapshots.repository.codehaus.org</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <checksumPolicy>ignore</checksumPolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

</project>
