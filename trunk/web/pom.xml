<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.codehaus.sonar-plugins</groupId>
    <artifactId>sonar-web-plugin</artifactId>
    <packaging>sonar-plugin</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>Sonar Web Plugin</name>

    <parent>
        <groupId>org.codehaus.sonar-plugins</groupId>
        <artifactId>parent</artifactId>
        <version>6</version>
        <relativePath>../parent</relativePath>
    </parent>

    <inceptionYear>2010</inceptionYear>
    <organization>
        <name>Matthijs Galesloot</name>
    </organization>

    <properties>
        <sonar.version>2.2</sonar.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.codehaus.sonar</groupId>
            <artifactId>sonar-plugin-api</artifactId>
            <version>${sonar.version}</version>
            <!--  dependendencies of sonar-plugin-api (pmd) should not get older version of junit -->
            <exclusions>
                <exclusion>
                    <groupId>junit</groupId>
                    <artifactId>junit</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- unit tests -->
        <dependency>
            <groupId>org.codehaus.sonar</groupId>
            <artifactId>sonar-testing-harness</artifactId>
            <version>${sonar.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- lexical analysis -->
        <dependency>
            <groupId>org.codehaus.sonar</groupId>
            <artifactId>sonar-channel</artifactId>
            <version>${sonar.version}</version>
        </dependency>

    </dependencies>

    <build>
        <pluginManagement>
          <plugins>
             <plugin>
                <groupId>org.codehaus.sonar</groupId>
                <artifactId>sonar-packaging-maven-plugin</artifactId>
                <extensions>true</extensions>
                <version>0.1</version>
                <configuration>
                    <pluginKey>sonar-web-plugin</pluginKey>
                    <pluginName>Web</pluginName>
                    <pluginClass>org.sonar.plugins.web.WebPlugin</pluginClass>
                </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
    </build>
    
    <profiles>
      <!--  local profile for sonar:sonar -->
      <profile>
        <id>local</id>
        <build>
          <pluginManagement>
            <plugins>
              <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <configuration>
                  <fail>false</fail>
                </configuration>
              </plugin>
            </plugins>
          </pluginManagement>
        </build>
      </profile>
    </profiles>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:svn:http://svn.codehaus.org/sonar-plugins/trunk/web</connection>
        <developerConnection>scm:svn:https://svn.codehaus.org/sonar-plugins/trunk/web</developerConnection>
        <url>http://svn.codehaus.org/sonar-plugins</url>
    </scm>
</project>
