<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.codehaus.sonar-plugins</groupId>
    <artifactId>parent</artifactId>
    <version>3</version>
    <relativePath>../parent</relativePath>
  </parent>

  <groupId>org.codehaus.sonar-plugins</groupId>
  <artifactId>sonar-sonarj-plugin</artifactId>
  <packaging>jar</packaging>
  <version>1.0</version>
  <name>Sonar plugin</name>

  <properties>
    <sonar.plugin.class>com.hello2morrow.sonarplugin.SonarJPlugin</sonar.plugin.class>
    <sonar.version>1.11</sonar.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar.version}</version>
    </dependency>
	<dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar.version}</version>
      <scope>test</scope>
      <type>test-jar</type>
    </dependency>
	<dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-junit4</artifactId>
      <version>2.5.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
	  <groupId>javax.xml.bind</groupId>
	  <artifactId>jaxb-api</artifactId>
	  <version>2.1</version>
	</dependency> 
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-impl</artifactId>
      <version>2.1.3</version>
    </dependency>  
  </dependencies>

  <pluginRepositories>
    <pluginRepository>
      <id>hello2morrow.maven.repository</id>
      <url>http://maven.hello2morrow.com/repository</url>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <plugins>
      <plugin>
        <!-- complete META-INF/MANIFEST.MF -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Plugin-Class>${sonar.plugin.class}</Plugin-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>javax.xml.bind:jaxb-api</include>
                  <include>javax.xml.stream:stax-api</include>
                  <include>javax.activation:activation</include>
                  <include>com.sun.xml.bind:jaxb-impl</include>
                </includes>
              </artifactSet>
              <relocations>
                <!-- <relocation>
                  <pattern>com.sun.istack</pattern>
                  <shadedPattern>com.hello2morrow.com.sun.istack</shadedPattern>
                </relocation>
               <relocation>
                  <pattern>com.sun.activation</pattern>
                  <shadedPattern>com.hello2morrow.com.sun.activation</shadedPattern>
                </relocation>
               <relocation>
                  <pattern>com.sun.xml.bind</pattern>
                  <shadedPattern>com.hello2morrow.com.sun.xml.bind</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.sun.xml.txw2</pattern>
                  <shadedPattern>com.hello2morrow.com.sun.xml.txw2</shadedPattern>
                </relocation>-->
                <relocation>
                  <pattern>javax.activation</pattern>
                  <shadedPattern>shade.javax.activation</shadedPattern>
                </relocation>
                <!--<relocation>
                  <pattern>javax.xml.stream</pattern>
                  <shadedPattern>com.hello2morrow.javax.xml.stream</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>javax.xml.bind</patt"target/sonarj-sonar/spacer.gif"ern>
                  <shadedPattern>com.hello2morrow.javax.xml.bind</shadedPattern>
                </relocation>-->
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>xjc</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <packageName>com.hello2morrow.sonarplugin.xsd</packageName> 
        </configuration>
      </plugin>      
      <plugin>
        <!-- Java 5 -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>com.hello2morrow.sonar</groupId>
        <artifactId>maven-sonarj-plugin</artifactId>
        <version>5.0.1-SNAPSHOT</version>
        <configuration>
          <reportDir>target/sonarj</reportDir>
          <file>sonar-sonarj-plugin.sonarj</file>
        </configuration>
      </plugin>
      
    </plugins>
  </build>
</project>
