<%
  url_params = "&resource=#{@project.id}"
  
  title = h(widget_properties['title']) if widget_properties['title']
%>

<% if title %>
<div>
  <h3 style="text-align: center; margin-bottom: 10px" id="motion-chart-title"><%= title -%></h3>
</div>
<% end %>

<%= render :partial => 'motionchart/widget_body', :locals => {:widget_properties => widget_properties, :url_params => url_params} -%>