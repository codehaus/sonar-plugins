<%
   issues_measure = measure('issues')
   issues_url_measure = measure('issues_url')

   if issues_measure
%>
  <div class="yui-g">
    <div class="yui-u first">
      <div class="dashbox">
        <p class="title">JIRA Issues</p>
        <span class="big">
          <p><a href='<%= issues_url_measure.data -%>'><%= format_measure(issues_measure) -%></a></p>
        </span>
      </div>
    </div>
    <div class="yui-u">
      <div class="dashbox">
        <p class="title">By Priority</p>
        <table>
          <% issues_measure.text_value.split(";").each do |priority_with_size|
            priority_with_size_array = priority_with_size.split("=") %>
            <tr>
              <td align="left"><%= priority_with_size_array[0] -%></td>
              <td align="right" style="padding-left: 10px;"><%= priority_with_size_array[1] -%></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
<% end %>
